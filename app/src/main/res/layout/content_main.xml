<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kishanrraval.android.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:paddingTop="15dp"
        android:textColor="#000000"
        android:id="@+id/heading"
        />
    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/heading"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="10dp"
        android:text="Popular Movies"
        android:textSize="18dp"
        android:id="@+id/b1"
        android:background="#2E3D49"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b1"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Stock Hawk"
        android:textSize="18dp"
        android:id="@+id/b2"
        android:layout_marginTop="9dp"
        android:background="#2E3D49"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b2"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Build It Bigger"
        android:textSize="18dp"
        android:id="@+id/b3"
        android:layout_marginTop="9dp"
        android:background="#2E3D49"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b3"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Make Your App Material"
        android:textSize="18dp"
        android:id="@+id/b4"
        android:layout_marginTop="9dp"
        android:background="#2E3D49"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b4"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Go Ubiquitious"
        android:layout_marginTop="9dp"
        android:textSize="18dp"
        android:id="@+id/b5"
        android:background="#2E3D49"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b5"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Capstone"
        android:layout_marginTop="9dp"
        android:textSize="18dp"
        android:id="@+id/b6"
        android:background="#2E3D49"
        android:textColor="#FFFFFF"
        />


</RelativeLayout>
